{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@adapters/*": [
        "services/adapters/*"
      ],
      "@core/*": [
        "services/core/*"
      ],
      "@intelligence/*": [
        "services/intelligence/*"
      ],
      "@scraping/*": [
        "services/scraping/*"
      ],
      "@communication/*": [
        "services/communication/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@prompts/*": [
        "prompts/*"
      ],
      "@types/*": [
        "types/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/test_legacy",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}